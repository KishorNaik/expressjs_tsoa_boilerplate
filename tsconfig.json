{
	"compileOnSave": false,
	"compilerOptions": {
		"incremental": true,
		"target": "es2017",
		"lib": ["es2017", "esnext.asynciterable"],
		"types": ["node", "express", "express-jwt"],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"pretty": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",
		"allowJs": true,
		"noEmit": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"paths": {
			"@/*": ["*"],
			"@config": ["config"],
			"@modules": ["modules/*"],
			"@middlewares/*": ["middlewares/*"],
			"@shared/*": ["shared/*"],
			"@workers/*": ["workers/*"],
			"@zone/*": ["zone/*"],
			"@express-rate-limit/*": ["node_modules/express-rate-limit/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.json", ".env"],
	"exclude": ["node_modules", "src/http", "src/logs/**/*", "./src/modules/#demo/**/*"]
}
